{
    "name": "ziiframework/composer",
    "description": "zii-framework composer plugin",
    "keywords": [
        "zii-framework",
        "composer"
    ],
    "type": "composer-plugin",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/ziiframework/composer/issues",
        "source": "https://github.com/ziiframework/composer"
    },
    "authors": [
        {
            "name": "Yii Team",
            "email": "team@yiiframework.com",
            "homepage": "https://www.yiiframework.com/team",
            "role": "Founder and project lead"
        }
    ],
    "require": {
        "php": ">=8.0.5",
        "ext-openssl": "*",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.5",
        "phpunit/phpunit": "^9.6"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "yii\\composer\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "redo-install": [
            "rm -f composer.lock",
            "@composer self-update -vvv",
            "@composer install -vvv"
        ]
    },
    "extra": {
        "class": "yii\\composer\\Plugin",
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
